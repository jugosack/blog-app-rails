<%###################################%>
<% if post.comments_counter == 0 %>
  <div class='comments'>
    <p>No comments yet!</p>
  </div>
<% end %>

<% if post.comments_counter > 0 %>
  <ul class='comments'>
    <% post.comments.each do |comment| %>
      <div class='comment'>
        <div><%= comment.author.name %>:</div>
        <div class='comment-box'><%= comment.text %></div>
      </div>
    <% end %>
  </ul>
<% end %>

